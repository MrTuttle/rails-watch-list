<h3>Add a movie to your <%= @list.name %> list</h3>


<div class="bg-white rounded p-3 shadow">
  <h3>Ajouter un film</h3>

  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :comment, placeholder: 'comment' %>
    <%= f.association :movie %>

    <%= f.submit class: 'btn btn-flat' %>
  <% end %>
</div>
